{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "strict": true,
    "allowJs": false,
    "checkJs": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~/lib": ["./lib/index.ts"],
      "~/lib/*": ["./lib/*"],
      "~/tests/*": ["./tests/*"],
      "~/repl/*": ["./repl/*"]
    }
  }
}
