{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "temp/",
    "noImplicitAny": true,
    "sourceMap": false,
    "downlevelIteration": true,
    "module": "none",
    "lib": ["es6", "es5"],
    "target": "es6",
    "allowJs": true
  },
  "include": [
    "src/**/*.js"
  ],
  "exclude": ["node_modules/**/*", "temp/**/*", "lib/**/*", "**/*.spec.ts"]
}

