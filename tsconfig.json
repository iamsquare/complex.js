{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "temp/",
    "noImplicitAny": true,
    "sourceMap": false,
    "downlevelIteration": true,
    "module": "none",
    "lib": ["esnext"],
    "target": "esnext",
    "esModuleInterop": true //important! from https://github.com/Microsoft/TypeScript-Node-Starter
  },
  "exclude": ["node_modules/**/*", "temp/**/*", "lib/**/*", "**/*.spec.ts"]
}
